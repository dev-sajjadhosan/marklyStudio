{
  "compilerOptions": {
    "target": "ES2020", // ✅ Modern Node.js support
    "module": "CommonJS", // ✅ Standard for Node
    "outDir": "./dist", // ✅ Output for compiled JS
    "rootDir": "./", // ✅ TS entry point is root
    "strict": true, // ✅ Strict type checks
    "esModuleInterop": true, // ✅ CJS ↔ ES module support
    "skipLibCheck": true, // ✅ Faster build
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // ✅ Import JSON files
    "noImplicitAny": true, // ✅ Safer code
    "moduleResolution": "node", // ✅ Works well with `node_modules`
    "allowJs": false // ✅ Keep it clean — TS only
  },
  "include": ["**/*.ts"], // ✅ All TS files
  "exclude": ["node_modules", "dist"] // ✅ Don’t recompile output or deps
}
