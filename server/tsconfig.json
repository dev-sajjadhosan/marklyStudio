{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowJs": false,
    "types": ["node"] // âœ… Explicit Node.js type support
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}